{
  "name": "twitterfavbot",
  "version": "1.0.0",
  "description": "simple twitter fav bot",
  "main": "app.js",
  "scripts": {
    "start": "node app.js"
  },
  "apps": [
    {
      "name": "twitterfav",
      "script": "./app.js",
      "restart_delay": 1000,
      "watch": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "ignore_watch": [
        "node_modules",
        ".git"
      ],
      "post_update": [
        "npm install"
      ]
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iFonny/TwitterFavBot.git"
  },
  "author": "iFonny",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iFonny/TwitterFavBot/issues"
  },
  "homepage": "https://github.com/iFonny/TwitterFavBot#readme",
  "dependencies": {
    "twit": "^2.2.9"
  }
}
